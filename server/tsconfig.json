{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "build"
  },
  "include": [
    "src/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}